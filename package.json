{
  "name": "ai-tools-directory",
  "private": true,
  "type": "module",
  "version": "2.0.0",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "tools:check": "node --env-file=.env.local scripts/validate-assets.mjs",
    "tools:fix": "node --env-file=.env.local scripts/validate-assets.mjs --fix",
    "tools:validate": "node --max-old-space-size=4096 scripts/validate-tools.mjs",
    "tools:audit": "node --env-file=.env.local scripts/category-audit.mjs",
    "tools:assets:audit": "node --max-old-space-size=4096 scripts/validate-assets.mjs",
    "tools:assets:fix": "node --max-old-space-size=4096 scripts/validate-assets.mjs --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "cats:check": "tsx scripts/fix-categories.ts",
    "cats:write": "tsx scripts/fix-categories.ts --write",
    "cats:dir": "tsx scripts/fix-categories.ts --dir data/tools --write"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "next": "15.5.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@fast-csv/format": "^4.3.5",
    "@googleapis/youtube": "^9.0.0",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.18.11",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "cheerio": "^1.1.2",
    "dotenv": "^16.6.1",
    "esbuild": "^0.25.10",
    "fast-glob": "^3.3.3",
    "node-html-parser": "^6.1.13",
    "p-limit": "^5.0.0",
    "picocolors": "^1.1.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "undici": "^6.22.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
