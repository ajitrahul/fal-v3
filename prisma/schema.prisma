// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // pooled (Accelerate) URL
  directUrl = env("DIRECT_URL")    // non-pooled Postgres URL
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  resetTokens  PasswordResetToken[]
  comments     Comment[]   // relation: one-to-many user -> comments
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

/*
  Comment model â€” new
  - toolSlug: link comments to a tool's slug (no change required to tools data format)
  - userId: relation to User.id (optional null not allowed for auth-only; we keep non-null)
  - author: display snapshot (name or email) for convenience
  - body: the comment text
  - isApproved: keep true by default (auto-approve); can be changed to false for moderation workflow
*/
model Comment {
  id        String   @id @default(cuid())
  toolSlug  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  author    String?
  body      String
  isApproved Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([toolSlug])
  @@index([userId])
}
